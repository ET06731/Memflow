{
  "name": "memflow",
  "displayName": "Memflow - 流动的记忆",
  "version": "1.0.0",
  "description": "Export AI conversations to Obsidian - A flowing memory bridge across platforms",
  "author": "Memflow Team",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "turndown": "^7.2.2",
    "turndown-plugin-gfm": "^1.0.2",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "@vitest/coverage-v8": "^4.0.18",
    "happy-dom": "^20.6.1",
    "jsdom": "^28.0.0",
    "prettier": "3.2.4",
    "typescript": "5.3.3",
    "vitest": "^4.0.18"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*",
      "https://*.moonshot.cn/*",
      "https://kimi.moonshot.cn/*",
      "https://kimi.ai/*",
      "https://www.kimi.com/*",
      "https://*.openai.com/*",
      "https://chatgpt.com/*",
      "https://gemini.google.com/*",
      "https://www.doubao.com/*"
    ],
    "permissions": [
      "storage"
    ]
  }
}